{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/core/*": ["src/core/*"],
      "@/commands/*": ["src/commands/*"],
      "@/templates/*": ["src/templates/*"],
      "@/schemas/*": ["src/schemas/*"],
      "@/config/*": ["src/config/*"],
      "@/prompts/*": ["src/prompts/*"]
    },
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}